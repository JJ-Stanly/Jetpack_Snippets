<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RoomMainActivity">

    <TextView
            android:id="@+id/act_room_main_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <Button
            android:id="@+id/act_room_main_btn_save_data"
            android:text="@string/common_save_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/common_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/act_room_main_btn_get_data"
            android:text="@string/common_get_data"
            app:layout_constraintStart_toStartOf="@id/act_room_main_btn_save_data"
            app:layout_constraintEnd_toEndOf="@id/act_room_main_btn_save_data"
            app:layout_constraintTop_toBottomOf="@id/act_room_main_btn_save_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>